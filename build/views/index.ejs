<!DOCTYPE html>
<html lang="en">
<head>
    <title>UFERSATube - Inicio</title>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/510cfc9fc6.js" crossorigin="anonymous"></script>

    <!-- HTML5Shiv -->
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <![endif]-->

  
    <!-- Style CSS -->
    <link rel="stylesheet" type="text/css" href="css/indexStyle.css">

    <link rel="icon" href="img/favicon.png">
 
</head>
<body>

   

    <header class="">
        <nav class="navbar navbar-expand-md navbar-light navbar-transparente">,
          <div class="container">
           
            <a href="/" class="navbar-brand mt-1 mb-1">
              <img src="img/logo.png" width="142">
            </a>

            <!--
            <a href="/">
              <img src="img/logo.png" alt="UFERSATube Logo" class="ufersa-tube-logo" />
            </a>
            -->

            <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
              <i class="fas fa-bars text-white"></i>
            </button>


            <form class="search-bar">
              <input class="search-input" type="search" placeholder="Buscar disciplinas" aria-label="Search" />
              <button type="submit" class="search-btn">
                <img src="img/magnify.svg" />
              </button>
            </form>

            <div class="menu-icons">
                
                <span class="userName"><%= user.name %></span>
              
                <a href="#">
                    <img class="user-icon" src="img/user-logo.png" alt="user" />
                </a>
                <a href="/logout">
                    <img class="logout-icon" src="img/logout-logo.png" alt="Logout" />
                </a>
            </div>

          </div>
        </nav>
    </header>

    <div class="container">
    
    <div class="row">
      <section class="col-sm">
        <div id="discipline" class="categories container">  
          <a class="btn categoryActive" href="/">Página Inicial</a>
          <% categories.forEach(category => { %>
              <a class="btn category" href="/category/<%= category.slug %>"><%= category.title %></a>
          <% }); %>
        </div> 
      </section>
    </div>
       
    <section class="video-section">
        <h2 class="video-section-title titleStyle">
          Todos os Vídeos
        </h2>

        <% videos.forEach(video => { %>
            <article class="video-container">
                <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                  <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                </a>
                <div class="video-bottom-section">
                  <div class="video-details">
                    <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                    <p class="video-channel-name"><%= video.categoryTitle %></p>
                    <div class="video-metadata">
                      <span><%= video.views %> visitas</span>
                      •
                      <span>1 week ago</span>
                    </div>
                  </div>
                </div>
              </article>
        <% }); %>
        
        
        
    </section>

    <!-- Quebra Galho para mostrar os videos de cada categoria == não eh a melhor maneira == revisar depois-->
    <% categories.forEach(category => { %>
      <% if(category.id == 1){ %>  
        <section class="video-section">
              <h2 class="video-section-title titleStyle">
                  Sistemas Multimídia
              </h2>
              
              <% videos.forEach(video => { %>
                <% if(video.category == 1){ %>
                  <article class="video-container">
                      <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                      <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                      </a>
                      <div class="video-bottom-section">
                      <div class="video-details">
                          <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                          <p class="video-channel-name"><%= video.categoryTitle %></p>
                          <div class="video-metadata">
                          <span><%= video.views %> visitas</span>
                          •
                          <span>1 week ago</span>
                          </div>
                      </div>
                      </div>
                  </article>
                <% } %>
              <% }); %>
                    
          </section>
      <% } else if(category.id == 2) {%>
        <section class="video-section">
          <h2 class="video-section-title titleStyle">
              Teoria da Computação
          </h2>
          
          <% videos.forEach(video => { %>
            <% if(video.category == 2){ %>
              <article class="video-container">
                  <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                  <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                  </a>
                  <div class="video-bottom-section">
                  <div class="video-details">
                      <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                      <p class="video-channel-name"><%= video.categoryTitle %></p>
                      <div class="video-metadata">
                      <span><%= video.views %> visitas</span>
                      •
                      <span>1 week ago</span>
                      </div>
                  </div>
                  </div>
              </article>
            <% } %>
          <% }); %>
                
      </section>
      <% } else if(category.id == 3) {%>
        <section class="video-section">
          <h2 class="video-section-title titleStyle">
              Computação Gráfica
          </h2>
          
          <% videos.forEach(video => { %>
            <% if(video.category == 3){ %>
              <article class="video-container">
                  <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                  <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                  </a>
                  <div class="video-bottom-section">
                  <div class="video-details">
                      <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                      <p class="video-channel-name"><%= video.categoryTitle %></p>
                      <div class="video-metadata">
                      <span><%= video.views %> visitas</span>
                      •
                      <span>1 week ago</span>
                      </div>
                  </div>
                  </div>
              </article>
            <% } %>
          <% }); %>
                
      </section>
      <% } else if(category.id == 4) {%>
        <section class="video-section">
          <h2 class="video-section-title titleStyle">
              Compiladores
          </h2>
          
          <% videos.forEach(video => { %>
            <% if(video.category == 4){ %>
              <article class="video-container">
                  <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                  <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                  </a>
                  <div class="video-bottom-section">
                  <div class="video-details">
                      <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                      <p class="video-channel-name"><%= video.categoryTitle %></p>
                      <div class="video-metadata">
                      <span><%= video.views %> visitas</span>
                      •
                      <span>1 week ago</span>
                      </div>
                  </div>
                  </div>
              </article>
            <% } %>
          <% }); %>
                
      </section>
      <% } %>  
    <% }); %>

    

  </div> 

  <footer>
    <div class="container">
      <div class="row">

          <h4>Todos direitos reservados.</h4>
        
      </div>
    </div>
  </footer>
</body>


</html>