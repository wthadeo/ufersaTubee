<!DOCTYPE html>
<html lang="en">
<head>
    <title>Categoria - <%= title %></title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/510cfc9fc6.js" crossorigin="anonymous"></script>

    <!-- HTML5Shiv -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <![endif]-->

    
    <!-- Style CSS -->
    <link rel="stylesheet" type="text/css" href="../css/categoryStyle.css">

    <link rel="icon" href="../img/favicon.png">

    
</head>
<body>

    <header class="">
        <nav class="navbar navbar-expand-md navbar-light navbar-transparente">,
          <div class="container">
           
            <a href="/" class="navbar-brand mt-1 mb-1">
              <img src="../img/logo.png" width="142">
            </a>

            <!--
            <a href="/">
              <img src="img/logo.png" alt="UFERSATube Logo" class="ufersa-tube-logo" />
            </a>
            -->

            <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
              <i class="fas fa-bars text-white"></i>
            </button>


            <form class="search-bar">
              <input class="search-input" type="search" placeholder="Buscar disciplinas" aria-label="Search" />
              <button type="submit" class="search-btn">
                <img src="../img/magnify.svg" />
              </button>
            </form>

            <div class="menu-icons">
                
                <span class="userName"><%= user.name %></span>
              
                <a href="#">
                    <img class="user-icon" src="../img/user-logo.png" alt="user" />
                </a>
                <a href="/logout">
                    <img class="logout-icon" src="../img/logout-logo.png" alt="Logout" />
                </a>
            </div>

          </div>
        </nav>
    </header>

    <div class="container">

        <div class="row">
            <section class="col-sm">
              <div id="discipline" class="categories container">  
                <a class="btn category" href="/">Página Inicial</a>
                <% categories.forEach(category => { %>
                    <% if(category.title == title ) { %> 
                        <a class="btn categoryActive" href="/category/<%= category.slug %>"><%= category.title %></a>
                    <% } else { %> 
                        <a class="btn category" href="/category/<%= category.slug %>"><%= category.title %></a>
                    <% } %> 
                <% }); %>
              </div> 
            </section>
        </div>  
        
        <section class="video-section">
            <h2 class="video-section-title tituloCategoria display-4"><%= title %></h2>
        </section>

        <section class="video-section">
            <h2 class="video-section-title">
                Enviados
            </h2>

            <% if(videos.length > 0 ) { %> 
                <% videos.forEach(video => { %>
                    <article class="video-container">
                        <a href="/video/<%= video.id %>" class="thumbnail" data-duration="<%= Math.floor(video.time/60) %>:<%= video.time%60 %>">
                        <img class="thumbnail-image" src="/img/<%= video.thumb %>" />
                        </a>
                        <div class="video-bottom-section">
                        <div class="video-details">
                            <a href="/video/<%= video.id %>" class="video-title"><%= video.title %></a>
                            <a href="/category/<%= video.category %>" class="video-channel-name"><%= video.categoryTitle %></a>
                            <div class="video-metadata">
                            <span><%= video.views %> visitas</span>
                            •
                            <span>1 week ago</span>
                            </div>
                        </div>
                        </div>
                    </article>
                <% }) %>
            <% } else { %>
                <h3>Nenhum vídeo publicado nesta categoria!</h3>
            <% } %>
        </section>
    </div>

    
</body>
</html>