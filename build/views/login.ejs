<!DOCTYPE html>
<html lang="en">
<head>
  
  <title>UfersaTube - Login</title>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/510cfc9fc6.js" crossorigin="anonymous"></script>

  <!-- HTML5Shiv -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <![endif]-->

  <!-- Style CSS -->
  <link rel="stylesheet" type="text/css" href="css/loginStyle.css">

  <link rel="icon" href="img/favicon.png">

</head>

<body>
  <% if(errors != undefined){ %>
    <% errors.forEach(error => { %>
      <div class="alert alert-danger"><%= error %></div>
    <% }) %>
<% } %>
  <section id="home"> <!-- CabeÃ§alho Destaque Inicio -->
      
    <div class="container">
      
      <div class="row">

        <div class="col-md-6 d-flex"> <!-- Textos do Destaque -->
          <div class="align-self-center">
                              

            <form class="mt-4 mb-4" method="POST" action="/auth">
              <a href="index.html" class="navbar-brand" style="margin: 0px 0px 30px 0px;">
                <img src="img/logo.png" width="300">
              </a>

              <div class="input-group input-group-lg" style="margin-bottom: 10px;">
                <input type="e-mail" placeholder="e-mail" class="form-control" required name="email">
              </div>
              <div class="input-group input-group-lg" style="margin-bottom: 10px;">
                <input type="password" placeholder="senha" class="form-control" required name="password">
              </div>
              <button class="btn btn-lg btn-block btn-azulEscuro" style="margin-bottom: 10px; margin-top: 10px;">Entrar</button>
              <a href="/singup" class="btn btn-lg btn-block btn-azulClaro" style="margin-bottom: 10px;">Cadastre-se</a>
            </form>

          </div>
        </div>

        <div class="col-md-6 d-none d-md-block">
          <img src="img/bg-login-woman.png">
        </div>
        
      </div>

    </div>

  </section> <!-- CabeÃ§alho Destaque Fim -->
  
</body>
</html>