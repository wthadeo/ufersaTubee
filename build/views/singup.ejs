<!DOCTYPE html>
<html lang="en">
<head>
  
  <title>UfersaTube - Cadastro</title>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/510cfc9fc6.js" crossorigin="anonymous"></script>

  <!-- HTML5Shiv -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <![endif]-->

  
  <!-- Style CSS -->
  <link rel="stylesheet" type="text/css" href="css/cadastroStyle.css">

  <link rel="icon" href="img/favicon.png">

</head>

<body>


  <header> <!-- CabeÃ§alho Menu Inicio -->
    <nav id="barraSuperior" class="navbar navbar-expand-sm navbar-light bg-primary">
      <div class="container">
        
        <a href="index.html" class="navbar-brand">
          <img src="img/logo.png" width="142">
        </a>

        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu">
          <span class="navbar-toggler-icon"></span>
        </button>

      </div>
    </nav>
  </header><!-- CabeÃ§alho Menu Fim -->

  <% if(errors != undefined){ %>
      <% errors.forEach(error => { %>
        <div class="alert alert-danger"><%= error %></div>
      <% }) %>
  <% } %>
  

  <div id="login">
    <h3 class="display-4 text-center  pt-5" style="margin-bottom: 40px; color:  #03045E;">Cadastre-se</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="/user" method="post">
                        <div></div>
                        <div class="form-group">
                            <input type="text" placeholder="nome" name="name" id="name" class="form-control form-control-lg" value="<%= name %>" required>
                        </div>
                        <div class="form-group">
                          <input type="e-mail" placeholder="e-mail" name="email" id="email" class="form-control form-control-lg" value="<%= email %>" required>
                        </div>
                        <div class="form-group">
                          <input type="password" placeholder="senha" name="password" id="password" class="form-control form-control-lg" required>
                        </div>
                        
                        <input type="submit" name="submit" class="btn btn-azulEscuro btn-lg btn-block" value="Cadastrar">
                       
                        <a href="/login" class="btn btn-lg btn-block btn-azulClaro" style="margin-bottom: 10px;">Login</a>                                            
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
 

  
</body>
</html>